/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.top  {
  width: 100%;
  height: 50vw;
  background: #FE7A00;
  border-radius: 0 0 20px 20px;
}
  .top_one,.top_two {
    width: 100%;
    height: 50%;
  }
    .top_left {
      position: relative;
      top: 5vw;
      float: left;
      width: 50%;
      height: 100%;
    }
      .top_font {
        float: left;
        margin-left: 5%;
        color: #FFCA99;
      }
        .top_font_top {
          margin-top: .5vw;
          font-size: 3.2vw;
        }
        .top_font_bottom {
          margin-top: 1.5vw;
          font-size: 4vw;
        }
      .top_left image {
        float: left;
        width: 25%;
        height: 50%;
        margin-left: 15%;
        /* margin-right: 10%;  */
        line-height: 25vw;
        border-radius: 10px;
      }

      .footer_btn {
        width: 90%;
        margin-left: 5%;
        height: 12vw;
        margin-top: 8vw;
        font-size: 4vw;
        color: white;
        line-height: 12vw;
        text-align: center;
        background: #FF4B4B;
      }

      .cover {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(193,193,193,.7);
      }
      .cover_con {
        z-index: 99;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 80%;
        height: 32%;
        background: #FE7A00;
        margin: auto;
      }
        .close {
          position: absolute;
          right: -30px;
          top: -30px;
          width: 35px;
          height: 35px;
        }
          .close image {
            width: 100%;
            height: 100%;
          }
        .cover_title {
          text-align: center;
          color: white;
          line-height: 15vw;
          letter-spacing: .5vw;
        }
        .cover_input {
          width: 70%;
          height: 10vw;
          margin-left: 15%;
          margin-top: 2vw;
          background: white;
          text-align: center;
          font-size: 4vw;
        }
        .cover_commit,.cover_commit2 {
          width: 70%;
          height: 10vw;
          margin-left: 15%;
          margin-top: 6vw;
          text-align: center;
          line-height: 10vw;
          background: #FF4B4B;
          font-size: 4vw;
          color: white;
        }
        .cover_commit2 {
          margin-top: 2vw;
        }
        .cover_con2 {
          height: 20%;
        }
